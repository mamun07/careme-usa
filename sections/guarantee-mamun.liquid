<div class="entry_guarantee">
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-3">
          {{ block.settings.guarantee_img | image_url: width: 100 | image_tag }}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Guarantee",
  "class": "home-guarantee-section-main",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "section_padding",
      "label": "Padding"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Guarantee",
      "settings": [
        {
          "type": "text",
          "id": "guarantee_title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "guarantee_des",
          "label": "Descriptions"
        },
        {
          "type": "image_picker",
          "id": "guarantee_img",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Guarantee",
      "category": "Guarantee",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .entry_guarantee{
    padding: 80px 0;
  }
{% endstylesheet %}

